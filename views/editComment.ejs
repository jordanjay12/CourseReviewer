<% include ./partials/header %>

<div class="container">
    <div class = "row">
        <h1 style = "text-align: center">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/fields/<%=field_id%>/<%=course_id%>/<%=comment._id%>?_method=PUT" method = "POST">
                <p>Professor:</p>
                <div class="form-group">
                    <input class = "form-control" type="text" name="comment[professor]" value=<%=comment.professor%>>                    
                </div>
                <p>Year:</p>
                <div class="form-group">
                    <input class = "form-control" type="text" name="comment[year]" value=<%=comment.year%>>                    
                </div>
                <p>Difficulty:</p>
                <div class="form-group">
                    <select required class="form-control" type="number" name ="comment[difficulty]" value=<%=comment.difficulty%>>
                        <option selected disabled value ="">Course Difficulty</option>
                        <% for(var i = 0; i < 11; i++){ %>
                        <option><%=i%></option>
                        <% } %>
                    </select>
                </div>
                <p>Course Workload:</p>
                <div class="form-group">
                    <select required class="form-control" type="number" name ="comment[workload]" placeholder="workload">
                        <option selected disabled value ="">Course Workload</option>
                        <% for(var i = 0; i < 11; i++){ %>
                        <option><%=i%></option>
                        <% } %>
                    </select>
                </div>                  
                <p>Course Material:</p>
                <div class="form-group">
                    <input class = "form-control" type="text" name="comment[material]" value=<%= comment.material%>>                    
                </div>
                <p>Other:</p>
                <div class="form-group">
                    <input class = "form-control" type="text" name="comment[other]" value=<%=comment.other%>>                    
                </div>                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>                    
                </div>                
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>
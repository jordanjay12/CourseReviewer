<% include ./partials/header %>

<div class = "container">
    <header class = "jumbotron">
        <div class="container">
            <h1>Fields of Study</h1>
            <p>Find the field you are looking for or create a new field</p>
            <p>
                <a class = "btn btn-primary btn-large" href="/fields/new">Add New Field of Study</a>
            </p>
        </div>
    </header>
    
     <div class = "row text-center" style="display:flex; flex-wrap: wrap;">
     <% fields.forEach(function(field){ %>
        <div class = "col-md-3 col-sm-6">
            <div class="thumbnail">
                <div class="caption">
                    <h4><%= field.name%></h4>
                </div>
                <div class="caption">
                    <h4><%= field.abbreviation%></h4>
                </div>
                <div class="btn btn-lg btn-primary"><a class="MoreCourses" href="/fields/<%=field._id%>">Show Courses</a></div>
            </div>
        </div>
    <% }); %>
    </div>
    
</div>

<% include ./partials/footer.ejs %>